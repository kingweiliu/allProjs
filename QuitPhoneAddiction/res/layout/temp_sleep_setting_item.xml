        android:textAppearance="?android:attr/textAppearanceLarge"/>
	    <CheckBox
	        android:id="@+id/chkEnable"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="启用"
	        android:focusable="false" 
	         />
    </LinearLayout>
    
        <TextView
        android:id="@+id/txtDown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="周一" />


</LinearLayout>
