<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ljw.quitphoneaddiction"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="11" />

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.ljw.quitphoneaddiction.MainActivity"
            android:label="@string/app_title" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name="com.ljw.quitphoneaddiction.QPAService"
            android:enabled="true" >
            <intent-filter>
                <action android:name="com.ljw.quitphoneaddiction.bindService" >
                </action>
            </intent-filter>
        </service>

        <receiver android:name="com.ljw.quitphoneaddiction.BootCompleteReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
        <receiver android:name="com.ljw.quitphoneaddiction.ScreenEventReceiver" />

        <activity
            android:name="com.ljw.quitphoneaddiction.RemindLocker"
            android:label="@string/title_activity_remind_locker" >
        </activity>
        <activity
            android:name="com.ljw.quitphoneaddiction.SettingMainActivity"
            android:label="@string/title_activity_setting_main" >
        </activity>
        <activity
            android:name="com.ljw.quitphoneaddiction.SettingSleepTimeActivity"
            android:label="@string/title_activity_setting_sleep_time" >
        </activity>
    </application>

</manifest>
